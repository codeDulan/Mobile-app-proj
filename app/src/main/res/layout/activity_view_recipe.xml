<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewRecipe">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_back_viewrecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:background="#00A81212"
                android:contentDescription="Go Back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_back_35dp" />

            <ImageButton
                android:id="@+id/btn_heart_viewrecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="#00FF0000"
                android:contentDescription="Add to Favourites"
                app:layout_constraintEnd_toStartOf="@+id/btn_share_viewrecipe"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_favorite_40dp_e6b980"
                app:tint="@color/primaryColor" />

            <ImageButton
                android:id="@+id/btn_share_viewrecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:background="#00FF0909"
                android:contentDescription="Share the recipe"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_share_40dp"
                app:tint="@color/primaryColor" />

            <TextView
                android:id="@+id/tv_recipe_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lexend_semibold"
                android:text="Dum Biriyani"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_back_viewrecipe" />

            <VideoView
                android:id="@+id/player_view"
                android:layout_width="wrap_content"
                android:layout_height="162dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_recipe_title" />

            <androidx.cardview.widget.CardView
                android:id="@+id/img_profile_picture"
                android:layout_width="93dp"
                android:layout_height="93dp"
                android:layout_marginStart="24dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="300dp"
                app:layout_constraintBottom_toBottomOf="@id/recipe_starbg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_recipeby">

                <ImageView
                    android:id="@+id/img_recipe_owner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ranil" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_recipeby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lexend"
                android:text="Recipe by"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/img_profile_picture"
                app:layout_constraintTop_toBottomOf="@+id/player_view" />

            <TextView
                android:id="@+id/tv_recipe_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/lexend_semibold"
                android:text="Andrew Tate "
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_recipeby"
                app:layout_constraintStart_toEndOf="@+id/tv_recipeby"
                app:layout_constraintTop_toTopOf="@+id/tv_recipeby" />

            <ImageView
                android:id="@+id/img_clock"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/clock"
                app:layout_constraintStart_toStartOf="@+id/tv_recipeby"
                app:layout_constraintTop_toBottomOf="@id/tv_recipe_owner" />

            <TextView
                android:id="@+id/recipe_time_viewRecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="10 Minutes"
                app:layout_constraintBottom_toBottomOf="@+id/img_clock"
                app:layout_constraintStart_toEndOf="@id/img_clock"
                app:layout_constraintTop_toTopOf="@id/img_clock" />

            <ImageView
                android:id="@+id/recipe_meal_viewRecipe"
                android:layout_width="114dp"
                android:layout_height="26dp"
                android:layout_marginStart="-14dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/whitebox"
                app:layout_constraintStart_toStartOf="@+id/img_clock"
                app:layout_constraintTop_toBottomOf="@id/img_clock" />

            <TextView
                android:id="@+id/recipe_meal_lbl_viewRecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breakfast"
                app:layout_constraintBottom_toBottomOf="@+id/recipe_meal_viewRecipe"
                app:layout_constraintEnd_toEndOf="@+id/recipe_meal_viewRecipe"
                app:layout_constraintStart_toStartOf="@id/recipe_meal_viewRecipe"
                app:layout_constraintTop_toTopOf="@+id/recipe_meal_viewRecipe" />

            <ImageView
                android:id="@+id/recipe_starbg"
                android:layout_width="66dp"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/whitebox_small"
                app:layout_constraintStart_toStartOf="@+id/recipe_meal_viewRecipe"
                app:layout_constraintTop_toBottomOf="@id/recipe_meal_viewRecipe" />

            <ImageView
                android:id="@+id/recipe_star"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="14dp"
                android:src="@drawable/star"
                app:layout_constraintBottom_toBottomOf="@+id/recipe_starbg"
                app:layout_constraintEnd_toEndOf="@id/recipe_starbg"
                app:layout_constraintTop_toTopOf="@id/recipe_starbg" />

            <TextView
                android:id="@+id/star_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="4.5"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/recipe_starbg"
                app:layout_constraintStart_toStartOf="@id/recipe_starbg"
                app:layout_constraintTop_toTopOf="@id/recipe_starbg" />

            <ImageView
                android:id="@+id/img_line"
                android:layout_width="385dp"
                android:layout_height="17dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#00FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recipe_starbg"
                app:srcCompat="@drawable/ira" />

            <TextView
                android:id="@+id/tv_description_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/lexend_semibold"
                android:text="Description"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_line" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/lexend"
                android:text="A savory Thai dish featuring tender chicken, rice noodles, and a flavorful sauce made from soy sauce, fish sauce, tamarind paste, and brown sugar, topped with bean sprouts, peanuts, and fresh cilantro for a delightful balance of flavors and textures."
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_description_title" />

            <TextView
                android:id="@+id/tv_ingredients_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lexend_semibold"
                android:text="Ingredients"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_description" />

            <TextView
                android:id="@+id/tv_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/lexend"
                android:text="8 oz (about 225g) rice noodles 2 tablespoons vegetable oil 2 cloves garlic, minced 8 oz (about 225g) boneless, skinless chicken breast, thinly sliced 2 eggs, lightly beaten 1 cup bean sprouts 2 green onions, sliced 1/4 cup chopped peanuts 2 tablespoons chopped fresh cilantro Lime wedges, for serving"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_ingredients_title" />

            <TextView
                android:id="@+id/tv_instructions_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lexend_semibold"
                android:text="Instructions"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_ingredients" />

            <TextView
                android:id="@+id/tv_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/lexend"
                android:text="8 oz (about 225g) rice noodles 2 tablespoons vegetable oil 2 cloves garlic, minced 8 oz (about 225g) boneless, skinless chicken breast, thinly sliced 2 eggs, lightly beaten 1 cup bean sprouts 2 green onions, sliced 1/4 cup chopped peanuts 2 tablespoons chopped fresh cilantro Lime wedges, for serving"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_instructions_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>